{
  "name": "parcel-template",
  "version": "1.0.0",
  "license": "MIT",
  "source": "src/index.html",
  "scripts": {
    "recreate-dist": "rm -Rf dist",
    "stylelint": "stylelint \"**/*.scss\"",
    "stylelint:fix": "stylelint \"**/*.scss\" --fix",
    "dev": "pnpm run recreate-dist && parcel -p 3000 --open chrome",
    "build": "pnpm run recreate-dist && parcel build",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "dependencies": {
  },
  "browserslist": [
    "last 2 version",
    "> 0.5%",
    "ie >= 11"
  ],
  "devDependencies": {
    "@parcel/transformer-sass": "^2.6.0",
    "@types/node": "^17.0.31",
    "parcel": "^2.6.0",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.4.1",
    "stylelint": "^14.9.1",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0"
  }
}
